.container{
    display: flex;
    flex-direction: column;
}

.head {
    width: 100%;
    position: relative;
}

.head .headimg{
    width: 750rpx;
    height: 500rpx;
}

.audio {
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    left: 50%;
    margin-left: -40rpx;
    top: 50%;
    margin-top: -40rpx;
    opacity: 0.9;
}

.author-data {
    flex-direction: row;
}

.author-data image {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    vertical-align: middle;
    margin-left: 10rpx;
}

.author-data .author {
    font-size: 20px;
    color: #333;
    vertical-align: middle;
    margin: 0 10rpx;
}

.author-data .date-text {
    vertical-align: middle;
    margin: 0 10rpx;
}

.author-data .date-time {
    vertical-align: middle;
}

.title {
    font-size: 20px;
    margin: 10px 10rpx;
}

.share-view {
    flex-direction: column;
    position: relative;
}

.share-img {
    flex-direction: row;
    float: right;
    margin-right: 20rpx;
}

.share-img image{
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    margin: 0 10rpx;
}

.share-view .line {
    width: 80%;
    height: 1px;
    background-color: #e5e5e5;
    position: absolute;
    top: 50%;
    left: 10%;
    z-index: -99;
}

.content {
    margin: 0 10rpx;
    letter-spacing: 2px;
    line-height: 20px;
}