.post-container{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
    padding-bottom: 5px;
    padding-top: 5px;
}
.post-author-data{
    margin: 10rpx 0 20rpx 10rpx;
}
.post-author{
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}
.post-data{
    margin-left: 20rpx;
    vertical-align: middle;
    margin-bottom: 5px;
    font-size: 26rpx;
}
.post-title{
    font-size: 34rpx;
    font-weight: 600;
    color: #333;
    margin-left: 10px;
    margin-bottom: 10px;
}
.post-img {
    width: 100%;
    height: 340rpx;
    margin: auto 0;
    margin-bottom: 15px;
}
.post-content{
    font-size: 28rpx;
    color: #666;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
}
.post-like{
    font-size: 13px;
    margin-left: 16px;
    flex-direction: row;
    line-height: 16px;
}
.post-like .post-like-img{
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
    vertical-align: middle;
}
.post-like .post-like-font{
    color: #333;
    font-size: 12px;
    margin-left: 10rpx;
    vertical-align: middle;
    margin-right: 8px;
}